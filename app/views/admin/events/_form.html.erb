<%= form_for(event, url: admin_event_path) do |f| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :presented_by %>
    <%= f.text_field :presented_by, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :guests_allowed %>
    <%= f.number_field :guests_allowed, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :capacity %>
    <%= f.number_field :capacity, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :lock_fields %>
    <%= f.check_box :lock_fields, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-primary btn-full-width' %>
  </div>
<% end %>
